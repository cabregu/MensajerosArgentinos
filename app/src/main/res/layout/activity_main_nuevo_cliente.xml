<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Usuario"
        android:textSize="12sp"
        android:textStyle="italic"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"/>

    <!-- Campo de entrada de nombre de usuario -->
    <EditText
        android:id="@+id/etCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_marginTop="16dp"
        android:hint="Nombre Del Cliente"
        android:inputType="text|textCapCharacters"

        />

    <!-- Campo de entrada de contraseÃ±a -->
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCliente"
        android:layout_marginTop="16dp"
        android:hint="Ingrese un Email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCorreo"
        android:layout_marginTop="5dp"
        android:hint="Direccion Del Cliente"
        android:inputType="text|textCapCharacters"

        />

    <EditText
        android:id="@+id/etRubro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDireccion"
        android:layout_marginTop="10dp"
        android:hint="Rubro"
        android:inputType="text|textCapCharacters"

        />


    <Button
        android:id="@+id/btnRegistrarEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRubro"
        android:layout_marginTop="15dp"
        android:text="Registrar Cliente"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegistrarEmpresa"
        android:layout_marginTop="15dp"
        android:text="Cancelar"
        android:textAllCaps="false"

        />


</RelativeLayout>